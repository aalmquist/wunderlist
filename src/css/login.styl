//import 'mixins'
transition() {
  -webkit-transition: arguments;
  -moz-transition: arguments;
  -ms-transition: arguments;
  -o-transition: arguments;
  transition: arguments;
}

box-shadow() {
  -webkit-box-shadow: arguments;
  -moz-box-shadow: arguments;
  -ms-box-shadow: arguments;
  -o-box-shadow: arguments;
  box-shadow: arguments;
}




html {
  background: url('/backgrounds/wood.jpg') no-repeat fixed;
  overflow: hidden;
  height: 100%;
}

body {
  display: none;
  font-size: 12px;
  color: #4E4E4E;
  overflow: hidden;
  height: 100%;
  border-top: 0px solid #666;
  background-origin: padding-box;
  background-size: cover;
}

body, button, input, select, textarea {
  font-family: 'Open Sans', 'Lucida Grande', Arial, sans-serif;
}




#login {
  overflow: auto;
  position: relative;
  height: 100%;

  .loginHeader, .loginFooter {
    text-align: center;
    position: absolute;
    left: 0;
    right: 0;
  }

  .loginHeader {
    top: 100px;

    h1 {
      text-indent: -9678px;
      height: 120px;
      width: 640px;
      background: url('/images/headline.png') no-repeat;
      margin: 0 auto 10px auto;
    }

    h2 {
      display: none;
    }

    .seefeatures, .visitblog {
      text-indent: -45123px;
      display: inline-block;
      height: 44px;
      width: 179px;
    }

    .seefeatures {
      left: 150px;
      background: url('/images/seefeatures.png') no-repeat 0 0;
      margin-right: 11px;

      &:hover {
        background-position: 0px -44px;
      }
    }

    .visitblog {
      left: 245px;
      background: url('/images/visitblog.png') no-repeat;

      &:hover {
        background-position: 0px -44px;
      }
    }
  }

  .loginFooter {
    top: 580px;

    & > div {
      margin-left: auto;
      margin-right: auto;
    }
  }

  .wkdownload {
    width: 700px;
    height: 110px;

    a {
      width: 114px;
      height: 88px;
      display: inline-block;
      text-indent: -23718px;
      background: url(/images/download.png);
    }

    .iphone {
      background-position: 0px -88px;
      &:hover {
        background-position: 0px 0px;
      };
    }

    .ipad {
      background-position: 570px -88px;
      &:hover {
        background-position: 570px 0px;
      }
    }

    .android {
      background-position: 456px -88px;
      &:hover {
        background-position: 456px 0px;
      }
    }

    .windows {
      background-position: 342px -88px;
      &:hover {
        background-position: 342px 0px;
      }
    }

    .mac {
      background-position: 228px -88px;
      &:hover {
        background-position: 228px 0px;
      }
    }

    .linux {
      background-position: 114px -88px;
      &:hover {
        background-position: 114px 0px;
      }
    }

    .notyet {
      opacity: 0.5;
      cursor:default;
      &:hover {
        background-position: 342px -88px;
      }
    }
  }

  .wkseparator {
    width: 560px;
    height: 2px;
    background: url(/images/wkseparator.png);
  }

  .followus {
    clear: both;
    width: 520px;
    height: 50px;
    overflow: hidden;
    margin-top: 15px;
    margin-bottom: 30px;

    p {
      background: url(/images/followus.png) 0px 10px no-repeat;
      padding-left: 80px;
      width: 430px;
      margin: 0 auto;
      overflow: auto;
    }

    p a.follow {
      margin-left: 2px;
      margin-right: 8px;
      margin: 10px 8px 0 2px;
      box-shadow: 0px 1px 3px #666;
      float: left;
      display: block;
      width: 32px;
      height: 32px;
      text-indent: -32879px;
      border-radius: 5px;
      opacity: 0.8;
      &:hover {
        opacity: 1.0;
        box-shadow: 0px 1px 5px #333;
      }
    }

    a.facebook {
      background: url('/images/icons/facebook.png');
    }

    a.twitter {
      background:url('/images/icons/twitter.png');
    }

    .wklogo {
      width: 580px;
      height: 50px;
      background: url('/images/wklogo.png') 247px 9px no-repeat; 
      cursor: pointer;
      text-indent: -34129px;
    }

    a.wklogowhite {
      display: block;
      width: 330px;
      height: 50px;
      background: url('/images/wklogowhite.png') 0 0 no-repeat;
      text-indent: -34129px;
      opacity: 0;
      float: right;
    }

    &:hover {
      .wklogo {
        margin-top: -55px;
        opacity: 0;
      }
      a.wklogowhite {
        opacity: 1.0;
      }
    }

    .wklogo, .wklogowhite {
      transition: opacity 0.6s ease-out, margin-top 0.4s ease-in-out;  
    }
  }

}
